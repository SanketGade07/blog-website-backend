<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <head>
        <!-- Disable favicon request -->
        <link rel="icon" href="data:,">
        <!-- Other head elements... -->
      </head>
      
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Blog Website</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success mb-4">New Article</a>
    </div>
    <% articles.forEach(article => { %>
        <div class="container">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= article.title %>
                    </h5>
                    <div class="date mb-2 text-muted ">
                        <%=article.createdAt.toLocaleDateString()%>
                    </div>
                    <p class="description mb-2">
                        <%= article.description %>
                    </p>
                    <!-- <div><%-article.sanitizedHtml%></div> -->
                    <a href="/articles/<%=article.id%>" class="btn btn-primary">Read More</a>
                    <a href="/articles/edit/<%=article.id%>" class="btn btn-info" style="color:white">Edit</a>
                    <form action="/articles/<%=article.id%>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger ">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    <%})%> 
    
</body>
</html>